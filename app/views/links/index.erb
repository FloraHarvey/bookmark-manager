<h1>Welcome <%= current_user.email %></h1>

<ul id = 'links'>
  <% @links.each do |link| %>
     <li>
       <%= link.title %> - <%= link.url %> -
        <% link.tags.each do |tag| %>
          <%= tag.tag_name %>
        <% end %>
     </li>
   <% end %>
</ul>

<form action="/links/new" method="get">
  <input type="submit" value="Add Link">
</form>
